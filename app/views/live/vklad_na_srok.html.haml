              %h2
                %span.radio-block
                  Хочу:
                %span.padding-side-20.radio-block
                  %label{for:"hold_percent_y"}
                    накапливать проценты
                    %input#hold_percent_y{type:"radio",name:"calc_hold_percent",checked:"checked"}
                  %label{for:"calc_hold_percent"}
                    снимать ежемесячно
                    %input#calc_hold_percent{type:"radio",name:"calc_hold_percent"}

        .columns.large-5.small-12.margin-bottom-50.text-center.padding-20
          .wallet-wrapper.columns.small-centered.large-uncentered
