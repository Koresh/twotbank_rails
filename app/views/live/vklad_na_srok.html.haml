                      0 EUR
                    %li.columns.small-3.item.item-2{style:"width:135px"}
                      1 000 EUR
                    %li.columns.small-3.item.item-3{style:"width:145px"}
                      2 000 EUR
                    %li.columns.small-3.item.item-4{style:"width:auto"}
                      3 000 EUR
